                                %img{:alt => "", :src => "./img/samples/products/cart/1.jpg"}/
                            .product-body
                              .whishlist-name
                                %h3
                                  %a{:href => "#", :title => ""} Gin Lane Greenport Cotton Shirt
                              .whishlist-price
                                %span Price:
                                %strong $120
                          %a.remove{:href => "#", :title => ""}
                            %i.icon.icon-remove
                        %li
                          .whishlist-item
                            .product-image
                              %a{:href => "#", :title => ""}
                                %img{:alt => "", :src => "./img/samples/products/cart/2.jpg"}/
                            .product-body
                              .whishlist-name
                                %h3
                                  %a{:href => "#", :title => ""} Gin Lane Greenport Cotton Shirt
                              .whishlist-price
                                %span Price:
                                %strong $120
                          %a.remove{:href => "#", :title => ""}
                            %i.icon.icon-remove
                        %li
                          .whishlist-item
                            .product-image
                              %a{:href => "#", :title => ""}
                                %img{:alt => "", :src => "./img/samples/products/cart/3.jpg"}/
                            .product-body
                              .whishlist-name
                                %h3
                                  %a{:href => "#", :title => ""} Gin Lane Greenport Cotton Shirt
                              .whishlist-price
