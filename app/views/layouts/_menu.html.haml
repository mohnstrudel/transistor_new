                  %i.icon.icon-shopping-bag
                  %span.awe-hidden-text Cart
                  %span.cart-number 2
                %ul.submenu.megamenu
                  %li
                    .container-fluid
                      %ul.whishlist
                        %li
                          .whishlist-item
                            .product-image
                              %a{:href => "#", :title => ""}
                                %img{:alt => "", :src => "./img/samples/products/cart/1.jpg"}/
                            .product-body
                              .whishlist-name
                                %h3
