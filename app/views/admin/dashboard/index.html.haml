%h1 Админская панель
.row
	.col-md-1
	.col-md-8
		.box 
			%h4 Товары
			%h5 Последние 5 созданных
			=render 'shared/listing'

			%h6 Действия
			=link_to 'Создать новый товар', new_admin_product_path, method: :get
			=link_to 'Просмотреть все товары', admin_products_path

		.box
			%h4 Категории
			%h5 Последние 5 созданных
			=render 'shared/listing_cats'

			%h6 Действия
			=link_to 'Создать новую категорию', new_admin_category_path, method: :get
			=link_to 'Просмотреть все категории', admin_categories_path

		.box		
			%h4 Подкатегории
			%h5 Последние 5 созданных
			=render 'shared/listing_subcats'

			%h6 Действия
			=link_to 'Создать новую подкатегорию', new_admin_subcategory_path, method: :get
			=link_to 'Просмотреть все подкатегории', admin_subcategories_path
		.box
			%h4 Размеры
			%h5 Последние размеры
			=render 'shared/listing_powers'

			%h6 Действия
			=link_to 'Создать новый размер', new_admin_size_path, method: :get
			=link_to 'Просмотреть все размеры', admin_sizes_path
		.box
			%h4 Тэги
			%h5 Последние тэги
			=render 'shared/listing_tags'

			%h6 Действия
			=link_to 'Создать новый тэг', new_admin_tag_path, method: :get
			=link_to 'Просмотреть все тэги', admin_tags_path

		.box
			%h4 Цвета
			%h5 Последние цвета
			=render 'shared/listing_colors'

			%h6 Действия
			=link_to 'Создать новый цвет', new_admin_color_path, method: :get
			=link_to 'Просмотреть все цвета', admin_colors_path
		.box
			%h4 Настройки
			%h6 Действия
			=link_to 'Редактировать настройки', edit_admin_setting_path(@setting)
	.col-md-3

